# Environment Variables

PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/bizzai

# Security - CRITICAL: Generate strong random secrets for production
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_min_32_chars_CHANGE_IN_PRODUCTION
JWT_REFRESH_SECRET=your_refresh_secret_min_32_chars_CHANGE_IN_PRODUCTION

# Email Configuration
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:5173

# Additional allowed origins (comma-separated)
ALLOWED_ORIGINS=

# Optional: Error Tracking
SENTRY_DSN=

# Optional: Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Logging
LOG_LEVEL=info

# Backup Configuration
BACKUP_GPG_PASSPHRASE=
BACKUP_DIR=./backups
RETENTION_DAYS=30
