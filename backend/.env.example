# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGO_URI=mongodb://localhost:27017/bizzai

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars

# Cookie Secret for signed cookies (CHANGE THIS IN PRODUCTION!)
COOKIE_SECRET=your-super-secret-cookie-key-change-this-in-production-min-32-chars

# Cookie Configuration (Optional)
# COOKIE_SAME_SITE=none  # Options: "none" (cross-domain), "lax" (same-domain), "strict" (strictest)
# Default: "none" for production (cross-domain deployments), "strict" for development
# Use "lax" ONLY if frontend and backend are on the SAME domain
# "none" requires HTTPS (secure: true)

# Email Configuration (Optional - for forgot password & invoices)
# Option 1: Gmail (for development/testing)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Option 2: Custom SMTP (RECOMMENDED for production - SendGrid, Mailgun, AWS SES, etc.)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key
# EMAIL_FROM=your-verified-email@gmail.com  # Must match verified sender in SendGrid

# Frontend URL (for CORS and password reset links)
FRONTEND_URL=http://localhost:5173
